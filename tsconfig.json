{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
    "module": "commonjs",
     "resolveJsonModule": true,
     "outDir": "./dist",
     "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}
